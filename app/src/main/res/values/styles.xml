<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- 색상 정의 -->
    <color name="blue">#2E76F1</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="sky_blue">#33B5E5</color>

    <!-- 문자열 리소스 -->
    <string name="app_name">AR내비</string>

    <!-- 기본 애플리케이션 테마 -->
    <style name="Base.Theme.ARTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 여기에 기본 테마 커스터마이징 -->
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="Theme.ARTest" parent="Base.Theme.ARTest" />

    <!-- 버튼 스타일 -->
    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>


    </style>

    <!-- 스플래시 화면 테마 -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ARTest</item>
    </style>
</resources>